<?xml version="1.0" encoding="iso-8859-1"?>
<xact:activity xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xact="urn:pt.jma.orchestration.activity">
	
	<xact:properties/>
	
	
	<xact:actions start="throw-dummy-exception" event="inicio">

		<xact:action name="throw-dummy-exception" service="teste">
			<xact:target class="pt.jma.orchestration.test.HelloWorld3" method="execute"/>
			<xact:binds>
				<xact:input/>
				<xact:output />
			</xact:binds>
			<xact:forwards/>
		</xact:action>
		</xact:actions>


	<xact:results>
		<xact:result name="pt.jma.orchestration.test.DummyException" type="exception" event="erro"/>
	</xact:results>

		<xact:binds>
			<xact:input />
			<xact:output>
				<xact:bind from="estado" scopeFrom="state" to="estado" />
			</xact:output>
		</xact:binds>

		<xact:events>

			<xact:event name="inicio">
				<xact:state name="estado">
					<xact:transition next="execucao"/>
				</xact:state>
			</xact:event>


			<xact:event name="erro">
				<xact:state name="estado">
					<xact:transition next="erro"/>
				</xact:state>
			</xact:event>

		</xact:events>

</xact:activity>